<layer-list xmlns:android="http://schemas.android.com/apk/res/android">
    <!-- 배경 -->
    <item>
        <shape android:shape="ring">
            <solid android:color="@color/secondary_background" />
            <size android:width="5dp" android:height="1dp" /> <!-- 얇게 설정 -->
        </shape>
    </item>
    <!-- 진행 바 -->
    <item>
        <rotate
            android:fromDegrees="0"
            android:toDegrees="360">
            <shape android:shape="ring">
                <solid android:color="@color/progress_bar" />
                <size android:width="5dp" android:height="5dp" /> <!-- 얇게 설정 -->
            </shape>
        </rotate>
    </item>
</layer-list>